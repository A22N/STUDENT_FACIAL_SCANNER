<div class="container mt-4">
    <h3>Lịch sử điểm danh</h3>

    <div class="card mt-3">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Học sinh</th>
                        <th>Lớp</th>
                        <th>Thời gian</th>
                        <th>Nguồn</th>
                        <th>Ảnh</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(item => { %>
                        <tr>
                            <td><%= item.full_name %> (<%= item.student_id %>)</td>
                            <td><%= item.class_name %></td>
                            <td><%= new Date(item.timestamp).toLocaleString() %></td>
                            <td><%= item.source %></td>
                            <td>
                                <% if (item.image_url) { %>
                                    <img src="<%= item.image_url %>" width="60" class="rounded">
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>